<?xml version="1.0" encoding="utf-8"?>
<com.example.naver.mylayout.MyLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/com.example.naver.mylayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Hello"
        android:gravity="center_horizontal"
        android:textSize="20dp"
        android:background="#ff0000"
        custom:weight="1"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="Android"
        android:gravity="center_horizontal"
        android:textSize="20dp"
        android:background="#ffff00"
        custom:weight="2"
        />
    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Button"
        custom:weight="2"
        />
    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="#00ff00"
        custom:weight="1"
        />

</com.example.naver.mylayout.MyLayout>